    section#section3
        h1.title فعالیت های شاتر
        .card-content
            .partial
                .circle
                    h1 ۱۲
                    p زبان پشتیبانی شده
            .partial
                .circle
                    h1 ۵۰+
                    p کارآفرینی برای بیش از ۵۰ نفر
            .partial
